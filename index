        // ================== H·ªÜ TH·ªêNG ƒêƒÇNG NH·∫¨P ==================
        
        function loginUser(email, password) {
            if (securityAttempts >= MAX_LOGIN_ATTEMPTS) {
                showNotification('T√†i kho·∫£n b·ªã kh√≥a do qu√° nhi·ªÅu l·∫ßn ƒëƒÉng nh·∫≠p sai!', 'error');
                return false;
            }
            
            const user = USER_ACCOUNTS[email];
            
            if (!user) {
                securityAttempts++;
                showNotification('Email kh√¥ng t·ªìn t·∫°i!', 'error');
                return false;
            }
            
            if (user.password !== password) {
                securityAttempts++;
                const remaining = MAX_LOGIN_ATTEMPTS - securityAttempts;
                showNotification(`M·∫≠t kh·∫©u sai! C√≤n ${remaining} l·∫ßn th·ª≠.`, 'error');
                return false;
            }
            
            // ƒêƒÉng nh·∫≠p th√†nh c√¥ng
            currentUser = {
                email: email,
                name: user.name,
                role: user.role,
                permissions: user.permissions,
                avatarColor: user.avatarColor,
                loginTime: new Date()
            };
            
            securityAttempts = 0;
            
            // L∆∞u session
            localStorage.setItem('user_session', JSON.stringify(currentUser));
            
            // Hi·ªÉn th·ªã n·ªôi dung ch√≠nh
            document.getElementById('loginModal').classList.remove('active');
            document.getElementById('mainContent').style.display = 'block';
            
            // C·∫≠p nh·∫≠t giao di·ªán
            updateUserInterface();
            
            // Ghi log
            logSecurityEvent('login_success', `Ng∆∞·ªùi d√πng ${email} ƒë√£ ƒëƒÉng nh·∫≠p`);
            
            showNotification(`Ch√†o m·ª´ng ${user.name}!`, 'success');
            return true;
        }
        
        function logoutUser() {
            if (currentUser) {
                logSecurityEvent('logout', `Ng∆∞·ªùi d√πng ${currentUser.email} ƒë√£ ƒëƒÉng xu·∫•t`);
            }
            
            currentUser = null;
            localStorage.removeItem('user_session');
            
            // ·∫®n n·ªôi dung ch√≠nh, hi·ªán login
            document.getElementById('mainContent').style.display = 'none';
            document.getElementById('loginModal').classList.add('active');
            
            // Reset form
            document.getElementById('loginEmail').value = '';
            document.getElementById('loginPassword').value = '';
            
            showNotification('ƒê√£ ƒëƒÉng xu·∫•t th√†nh c√¥ng!', 'info');
        }
        
        function checkExistingSession() {
            const session = localStorage.getItem('user_session');
            if (session) {
                try {
                    currentUser = JSON.parse(session);
                    document.getElementById('loginModal').classList.remove('active');
                    document.getElementById('mainContent').style.display = 'block';
                    updateUserInterface();
                    return true;
                } catch {
                    localStorage.removeItem('user_session');
                }
            }
            return false;
        }
        
        function updateUserInterface() {
            if (!currentUser) return;
            
            // C·∫≠p nh·∫≠t header
            document.getElementById('currentUser').textContent = currentUser.name;
            document.getElementById('userName').textContent = currentUser.name;
            document.getElementById('userRole').textContent = currentUser.role === 'admin' ? 'Qu·∫£n tr·ªã vi√™n' : 'Ng∆∞·ªùi d√πng xem';
            
            // C·∫≠p nh·∫≠t avatar
            const avatar = document.getElementById('userAvatar');
            avatar.style.background = currentUser.avatarColor;
            avatar.innerHTML = currentUser.role === 'admin' ? '<i class="fas fa-crown"></i>' : '<i class="fas fa-user"></i>';
            
            // C·∫≠p nh·∫≠t security badge
            document.getElementById('securityBadgeText').textContent = 
                currentUser.role === 'admin' ? 'QU·∫¢N TR·ªä VI√äN' : 'CH·∫æ ƒê·ªò XEM';
            
            // Kh√≥a/b·ªè kh√≥a menu theo quy·ªÅn
            updateMenuPermissions();
        }
        
        function updateMenuPermissions() {
            const isAdmin = currentUser.role === 'admin';
            
            document.querySelectorAll('.menu-card').forEach(card => {
                const pageId = card.getAttribute('data-page');
                const pageData = PAGE_DATA[pageId];
                
                if (pageData && pageData.adminOnly && !isAdmin) {
                    card.style.opacity = '0.5';
                    card.style.cursor = 'not-allowed';
                    card.onclick = function() {
                        showNotification('Ch·ªâ qu·∫£n tr·ªã vi√™n m·ªõi xem ƒë∆∞·ª£c trang n√†y!', 'warning');
                    };
                } else {
                    card.style.opacity = '1';
                    card.style.cursor = 'pointer';
                    card.onclick = function() {
                        openPage(pageId);
                    };
                }
            });
        }
        
        // ================== M·ªû TRANG KH√ÅC ==================
        
        function openPage(pageId) {
            const pageData = PAGE_DATA[pageId];
            if (!pageData) return;
            
            // Ki·ªÉm tra quy·ªÅn
            if (pageData.adminOnly && currentUser.role !== 'admin') {
                showNotification('Ch·ªâ qu·∫£n tr·ªã vi√™n m·ªõi xem ƒë∆∞·ª£c trang n√†y!', 'warning');
                return;
            }
            
            // C·∫≠p nh·∫≠t n·ªôi dung modal
            document.getElementById('modalTitle').textContent = pageData.title;
            document.getElementById('modalDescription').textContent = pageData.description;
            
            // C·∫≠p nh·∫≠t icon
            const iconElement = document.querySelector('#modalHeader i');
            iconElement.className = `fas ${pageData.icon}`;
            
            // Th√™m d·ªØ li·ªáu
            const dataContainer = document.getElementById('modalData');
            dataContainer.innerHTML = '';
            
            pageData.data.forEach(item => {
                const div = document.createElement('div');
                div.className = 'data-item';
                div.innerHTML = `
                    <span style="color: #ccc;">${item.label}:</span>
                    <span style="color: #00CCFF; font-weight: bold;">${item.value}</span>
                `;
                dataContainer.appendChild(div);
            });
            
            // Hi·ªÉn th·ªã modal
            document.getElementById('pageModal').classList.add('active');
            
            // Ghi log
            logSecurityEvent('page_viewed', `Xem trang: ${pageData.title} - Ng∆∞·ªùi d√πng: ${currentUser.email}`);
        }
        
        // ================== H·ªÜ TH·ªêNG B·∫¢O M·∫¨T ==================
        
        function blockDevTools() {
            // Ch·∫∑n ph√≠m t·∫Øt DevTools
            document.addEventListener('keydown', function(e) {
                // F12
                if (e.key === 'F12' || e.keyCode === 123) {
                    e.preventDefault();
                    showSecurityAlert('Ph√≠m F12 ƒë√£ b·ªã v√¥ hi·ªáu h√≥a');
                    return false;
                }
                
                // Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+Shift+C
                if (e.ctrlKey && e.shiftKey && (e.key === 'I' || e.key === 'J' || e.key === 'C')) {
                    e.preventDefault();
                    showSecurityAlert('T·ªï h·ª£p ph√≠m DevTools ƒë√£ b·ªã v√¥ hi·ªáu h√≥a');
                    return false;
                }
                
                // Ctrl+U (view source)
                if (e.ctrlKey && e.key === 'u') {
                    e.preventDefault();
                    showSecurityAlert('Xem source code ƒë√£ b·ªã v√¥ hi·ªáu h√≥a');
                    return false;
                }
            });
            
            console.log('%cüö® H·ªÜ TH·ªêNG ƒêANG ƒê∆Ø·ª¢C B·∫¢O V·ªÜ üö®', 'color: red; font-size: 20px; font-weight: bold;');
            console.log('%c‚ö†Ô∏è M·ªçi h√†nh vi c·ªë g·∫Øng ch·ªânh s·ª≠a ƒë·ªÅu b·ªã ghi nh·∫≠n!', 'color: orange; font-size: 14px;');
        }
        
        function blockCopyAndRightClick() {
            // Ch·∫∑n right-click
            document.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                showSecurityAlert('Menu chu·ªôt ph·∫£i ƒë√£ b·ªã v√¥ hi·ªáu h√≥a');
                logSecurityEvent('right_click_blocked', 'T·ªça ƒë·ªô: ' + e.clientX + ',' + e.clientY);
                return false;
            });
            
            // Ch·∫∑n copy
            document.addEventListener('copy', function(e) {
                e.preventDefault();
                showSecurityAlert('Sao ch√©p n·ªôi dung ƒë√£ b·ªã v√¥ hi·ªáu h√≥a');
                logSecurityEvent('copy_blocked', 'Ng∆∞·ªùi d√πng c·ªë g·∫Øng copy n·ªôi dung');
                return false;
            });
            
            // Ch·∫∑n cut
            document.addEventListener('cut', function(e) {
                e.preventDefault();
                logSecurityEvent('cut_blocked', 'Ng∆∞·ªùi d√πng c·ªë g·∫Øng cut n·ªôi dung');
                return false;
            });
            
            // Ch·∫∑n drag
            document.addEventListener('dragstart', function(e) {
                e.preventDefault();
                return false;
            });
        }
        
        function showSecurityAlert(message) {
            // T·∫°o c·∫£nh b√°o
            const alert = document.createElement('div');
            alert.className = 'security-warning';
            alert.innerHTML = `
                <i class="fas fa-exclamation-triangle"></i>
                <span>${message}</span>
            `;
            
            alert.style.cssText = `
                position: fixed;
                top: 50px;
                left: 50%;
                transform: translateX(-50%);
                z-index: 999999;
                animation: shake 0.5s;
                white-space: nowrap;
            `;
            
            document.body.appendChild(alert);
            
            // Ghi log
            logSecurityEvent('security_alert', message);
            
            // T·ª± ƒë·ªông x√≥a sau 3 gi√¢y
            setTimeout(() => {
                if (alert.parentNode) {
                    document.body.removeChild(alert);
                }
            }, 3000);
        }
        
        function logSecurityEvent(type, message) {
            const timestamp = new Date().toLocaleString('vi-VN');
            const logEntry = `[${timestamp}] ${type}: ${message}`;
            
            // L∆∞u v√†o localStorage
            let securityLog = JSON.parse(localStorage.getItem('security_log') || '[]');
            securityLog.push(logEntry);
            
            // Gi·ªØ t·ªëi ƒëa 100 log
            if (securityLog.length > 100) {
                securityLog = securityLog.slice(-100);
            }
            
            localStorage.setItem('security_log', JSON.stringify(securityLog));
            
            // In ra console (ch·ªâ ƒë·ªÉ debug)
            console.log(`[SECURITY LOG] ${logEntry}`);
        }
        
        function detectTampering() {
            // L∆∞u hash c·ªßa n·ªôi dung quan tr·ªçng
            const importantContent = document.querySelector('.main-content')?.innerHTML || '';
            if (!importantContent) return;
            
            const contentHash = simpleHash(importantContent);
            
            // Ki·ªÉm tra ƒë·ªãnh k·ª≥
            setInterval(() => {
                const currentContent = document.querySelector('.main-content')?.innerHTML || '';
                const currentHash = simpleHash(currentContent);
                
                if (currentHash !== contentHash) {
                    showSecurityAlert('Ph√°t hi·ªán thay ƒë·ªïi n·ªôi dung tr√°i ph√©p!');
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                }
            }, 5000);
        }
        
        function simpleHash(str) {
            let hash = 0;
            for (let i = 0; i < str.length; i++) {
                hash = ((hash << 5) - hash) + str.charCodeAt(i);
                hash = hash & hash;
            }
            return hash;
        }
        
        // ================== KH·ªûI T·∫†O H·ªÜ TH·ªêNG ==================
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ H·ªÜ TH·ªêNG QU·∫¢N L√ù K·ª∏ THU·∫¨T ƒêANG KH·ªûI ƒê·ªòNG...');
            
            // √Åp d·ª•ng b·∫£o m·∫≠t
            blockDevTools();
            blockCopyAndRightClick();
            detectTampering();
            
            // Ki·ªÉm tra session ƒë√£ l∆∞u
            checkExistingSession();
            
            // ================== X·ª¨ L√ù S·ª∞ KI·ªÜN ==================
            
            // ƒêƒÉng nh·∫≠p
            document.getElementById('submitLogin').addEventListener('click', function() {
                const email = document.getElementById('loginEmail').value.trim();
                const password = document.getElementById('loginPassword').value.trim();
                
                if (!email || !password) {
                    showNotification('Vui l√≤ng nh·∫≠p ƒë·∫ßy ƒë·ªß th√¥ng tin!', 'warning');
                    return;
                }
                
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ƒêANG X√ÅC TH·ª∞C...';
                this.disabled = true;
                
                setTimeout(() => {
                    if (loginUser(email, password)) {
                        // Th√†nh c√¥ng
                    } else {
                        // Th·∫•t b·∫°i
                        this.innerHTML = '<i class="fas fa-sign-in-alt"></i> ƒêƒÇNG NH·∫¨P';
                        this.disabled = false;
                    }
                }, 1500);
            });
            
            // Enter ƒë·ªÉ ƒëƒÉng nh·∫≠p
            document.getElementById('loginPassword').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    document.getElementById('submitLogin').click();
                }
            });
            
            // ƒêƒÉng xu·∫•t
            document.getElementById('logoutBtn').addEventListener('click', logoutUser);
            
            // ƒê√≥ng modal trang
            document.getElementById('closeModalBtn').addEventListener('click', function() {
                document.getElementById('pageModal').classList.remove('active');
            });
            
            // ƒê√≥ng modal b·∫±ng ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    document.getElementById('pageModal').classList.remove('active');
                }
            });
            
            // ƒê·ªïi m·∫≠t kh·∫©u
            document.getElementById('changePasswordBtn').addEventListener('click', function() {
                showNotification('T√≠nh nƒÉng ƒë·ªïi m·∫≠t kh·∫©u ƒëang ƒë∆∞·ª£c ph√°t tri·ªÉn!', 'info');
            });
            
            // T√¨m ki·∫øm
            document.getElementById('search-btn').addEventListener('click', function() {
                const searchTerm = document.getElementById('search-input').value.trim();
                if (searchTerm) {
                    showNotification(`ƒêang t√¨m ki·∫øm: "${searchTerm}"...`, 'info');
                    logSecurityEvent('search_performed', `T·ª´ kh√≥a: ${searchTerm} - Ng∆∞·ªùi d√πng: ${currentUser?.email || 'unknown'}`);
                }
            });
            
            // Enter ƒë·ªÉ t√¨m ki·∫øm
            document.getElementById('search-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    document.getElementById('search-btn').click();
                }
            });
            
            // Click v√†o search option
            document.querySelectorAll('.search-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.search-option').forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // ================== KH·ªûI T·∫†O D·ªÆ LI·ªÜU ==================
            
            // C·∫≠p nh·∫≠t ng√†y gi·ªù
            updateDateTime();
            setInterval(updateDateTime, 60000);
            
            // C·∫≠p nh·∫≠t l∆∞·ª£t truy c·∫≠p
            updateVisitCount();
            
            // Kh·ªüi t·∫°o radar
            initWeatherRadar();
            
            console.log('‚úÖ H·ªÜ TH·ªêNG ƒê√É S·∫¥N S√ÄNG');
        });
        
        // ================== H√ÄM TI·ªÜN √çCH ==================
        
        function updateDateTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            const dateStr = now.toLocaleDateString('vi-VN', options);
            if (document.getElementById('current-date')) {
                document.getElementById('current-date').textContent = dateStr;
            }
            if (document.getElementById('system-update-date')) {
                document.getElementById('system-update-date').textContent = now.toLocaleDateString('vi-VN');
            }
            
            // C·∫≠p nh·∫≠t th·ªùi gian radar
            const timeStr = now.toLocaleTimeString('vi-VN', {
                hour: '2-digit',
                minute: '2-digit'
            });
            if (document.getElementById('update-time')) {
                document.getElementById('update-time').textContent = timeStr;
            }
        }
        
        function updateVisitCount() {
            let visitCount = localStorage.getItem('visitCount') || 1847;
            visitCount = parseInt(visitCount) + 1;
            localStorage.setItem('visitCount', visitCount);
            if (document.getElementById('visit-count')) {
                document.getElementById('visit-count').textContent = visitCount.toLocaleString('vi-VN');
            }
        }
        
        function showNotification(message, type = 'info') {
            const colors = {
                success: '#2E7D32',
                warning: '#ED6C02',
                info: '#0288D1',
                error: '#D32F2F'
            };
            
            const icons = {
                success: 'fa-check-circle',
                warning: 'fa-exclamation-triangle',
                info: 'fa-info-circle',
                error: 'fa-times-circle'
            };
            
            // X√≥a th√¥ng b√°o c≈©
            const oldNotifications = document.querySelectorAll('.temp-notification');
            oldNotifications.forEach(notif => notif.remove());
            
            const notification = document.createElement('div');
            notification.className = 'temp-notification';
            notification.innerHTML = `
                <i class="fas ${icons[type]}"></i>
                <span>${message}</span>
            `;
            
            notification.style.cssText = `
                position: fixed;
                top: 80px;
                right: 20px;
                background: ${colors[type]};
                color: white;
                padding: 10px 14px;
                border-radius: var(--radius);
                box-shadow: var(--shadow-lg);
                z-index: 99999;
                font-weight: 600;
                max-width: 300px;
                animation: slideIn 0.3s ease;
                font-size: 13px;
                border-left: 3px solid rgba(255, 255, 255, 0.7);
                display: flex;
                align-items: center;
                gap: 8px;
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    if (notification.parentNode) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }, 3000);
            
            // Th√™m animation style n·∫øu ch∆∞a c√≥
            if (!document.querySelector('#notification-styles')) {
                const style = document.createElement('style');
                style.id = 'notification-styles';
                style.textContent = `
                    @keyframes slideIn {
                        from { transform: translateX(100%); opacity: 0; }
                        to { transform: translateX(0); opacity: 1; }
                    }
                    @keyframes slideOut {
                        from { transform: translateX(0); opacity: 1; }
                        to { transform: translateX(100%); opacity: 0; }
                    }
                `;
                document.head.appendChild(style);
            }
        }
        
        // ================== WEATHER RADAR ==================
        
        function initWeatherRadar() {
            // D·ªØ li·ªáu m·∫´u
            const weatherData = {
                temperature: Math.floor(Math.random() * 10) + 25,
                humidity: Math.floor(Math.random() * 20) + 60,
                windSpeed: Math.floor(Math.random() * 15) + 5,
                visibility: (Math.random() * 7 + 8).toFixed(1)
            };
            
            // C·∫≠p nh·∫≠t giao di·ªán
            if (document.getElementById('temperature')) {
                document.getElementById('temperature').textContent = weatherData.temperature + '¬∞C';
                document.getElementById('humidity').textContent = weatherData.humidity + '%';
                document.getElementById('wind-speed').textContent = weatherData.windSpeed + ' kt';
                document.getElementById('visibility').textContent = weatherData.visibility + ' km';
            }
            
            // T·∫°o hi·ªáu ·ª©ng m∆∞a
            createRainEffect();
            
            // C·∫≠p nh·∫≠t tr·∫°ng th√°i radar
            updateRadarStatus();
            
            // T·ª± ƒë·ªông c·∫≠p nh·∫≠t
            setInterval(() => {
                updateWeatherData();
                createRainEffect();
                updateRadarStatus();
            }, 120000);
        }
        
        function updateWeatherData() {
            if (!document.getElementById('temperature')) return;
            
            const tempChange = (Math.random() - 0.5) * 2;
            const currentTemp = parseFloat(document.getElementById('temperature').textContent);
            const newTemp = Math.max(20, Math.min(38, Math.round(currentTemp + tempChange)));
            
            const humidityChange = (Math.random() - 0.5) * 5;
            const currentHumidity = parseFloat(document.getElementById('humidity').textContent);
            const newHumidity = Math.max(50, Math.min(90, Math.round(currentHumidity + humidityChange)));
            
            document.getElementById('temperature').textContent = newTemp + '¬∞C';
            document.getElementById('humidity').textContent = newHumidity + '%';
            
            // C·∫≠p nh·∫≠t timestamp
            const now = new Date();
            const timeStr = now.toLocaleTimeString('vi-VN', {
                hour: '2-digit',
                minute: '2-digit'
            });
            if (document.getElementById('update-time')) {
                document.getElementById('update-time').textContent = timeStr;
            }
        }
        
        function createRainEffect() {
            const rainContainer = document.getElementById('rain-container');
            const radarDisplay = document.getElementById('radar-display');
            
            if (!rainContainer || !radarDisplay) return;
            
            rainContainer.innerHTML = '';
            
            const humidity = document.getElementById('humidity') ? 
                parseFloat(document.getElementById('humidity').textContent) : 75;
            const rainCount = humidity > 80 ? 15 : humidity > 70 ? 8 : humidity > 60 ? 4 : 0;
            
            const displayWidth = radarDisplay.clientWidth || 220;
            const displayHeight = radarDisplay.clientHeight || 220;
            const centerX = displayWidth / 2;
            const centerY = displayHeight / 2;
            const maxRadius = Math.min(centerX, centerY) * 0.8;
            
            for (let i = 0; i < rainCount; i++) {
                const distanceKm = 10 + Math.random() * 230;
                const distancePixels = (distanceKm / 240) * maxRadius;
                
                const azimuth = Math.random() * 360;
                const azimuthRad = azimuth * (Math.PI / 180);
                
                const x = centerX + Math.cos(azimuthRad) * distancePixels;
                const y = centerY + Math.sin(azimuthRad) * distancePixels;
                
                const size = 4 + Math.random() * 4;
                const opacity = 0.3 + Math.random() * 0.4;
                
                const rainPoint = document.createElement('div');
                rainPoint.className = 'rain-point';
                rainPoint.style.cssText = `
                    position: absolute;
                    left: ${x - size/2}px;
                    top: ${y - size/2}px;
                    width: ${size}px;
                    height: ${size}px;
                    background: rgba(0, 200, 255, ${opacity});
                    box-shadow: 0 0 ${size}px rgba(0, 200, 255, ${opacity + 0.2});
                    animation-delay: ${Math.random() * 2}s;
                    z-index: 20;
                    border-radius: 50%;
                `;
                
                rainContainer.appendChild(rainPoint);
            }
        }
        
        function updateRadarStatus() {
            const radarStatus = document.getElementById('radar-status');
            if (!radarStatus) return;
            
            const humidity = document.getElementById('humidity') ? 
                parseFloat(document.getElementById('humidity').textContent) : 75;
            
            if (humidity > 80) {
                radarStatus.textContent = 'Ph√°t hi·ªán m∆∞a';
                radarStatus.style.color = '#FF6600';
            } else if (humidity > 70) {
                radarStatus.textContent = 'M√¢y d√†y';
                radarStatus.style.color = '#ED6C02';
            } else {
                radarStatus.textContent = 'ƒêang qu√©t';
                radarStatus.style.color = '#2E7D32';
            }
        }
    </script>
</body>
</html>
